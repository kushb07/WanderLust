        <a href="/listings/category/arctic">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </a>
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
        </div>
      </div>
    </div>

<!-- 
    here row-cols-lg-3 means that in every row in large screen there should be minimum of 3 columns
    and row-cols-md-2 means that in every row in medium screen there should be minimum of 2 columns -->
    
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%for(listing of listingData) {%>
      <!-- we have insered whole card inside the anchor tag so that on clinking the card page will redirect
      to show page -->
        <a href="/listings/<%=listing._id%>" class="listing-link">
            <div class="card listing-card" style="width: 20rem;">
                <img src=<%= listing.image.url %> class="card-img-top" alt="listing image">
                <div class="card-body">
                  <p class="card-text">
                    <%=listing.title%>
                    <br><br>
                    â‚¹ <%=  listing.price%>/night
                    <i class="tax-info">&nbsp; &nbsp; +18% GST </i>
                  </p>
                </div>
              </div>
            </a>
    <%}%>
</div>
    
    
</body>



